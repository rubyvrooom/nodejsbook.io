!!! 5
html(lang="en")
  head
    title #{post.title} | Sams Teach Yourself node.js in 24 Hours
    link(href="/stylesheets/screen.css", media="screen", rel="stylesheet", type="text/css")
    link(rel="alternate", type="application/rss+xml", title="RSS 2.0", href="/feed.rss")
    link(rel="alternate", type="application/atom+xml", title="Atom Feed", href="/feed.xml")
    meta(name="description", content="#{post.excerpt}")
    -postDate = post.date.format('{yyyy}-{MM}-{dd}')
    meta(name="dc.date.created", content="#{postDate}")
    meta(name="author", content="George Ornbo")
    meta(name="keywords", content="#{post.tags}")
    !{ga('UA-324369-26')}
  body
    header#header
      hgroup
        h1
          a(href="/") #{site.config.title}
        h2 Sams Teach Yourself node.js in 24 Hours
    nav#breadcrumb
      a.read-more(href="/") &larr; Back
    !{hNews(post)}
    !{disqus(post, 'nodejsbook')}
    footer
      nav
        h1 Related Sites
        ul
          li
            a(href="http://popjs.com") Powered by Pop
          li
            a(href="http://dailyjs.com") Learn JavaScript
          li
            a(href="http://alexyoung.org") Designed by Alex R. Young
      p.copyright Content &copy; George Ornbo
